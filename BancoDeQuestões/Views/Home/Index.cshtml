@{
    ViewBag.Title = "VisualizarQuestoes";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- Content area -->
<div class="content d-flex justify-content-center align-items-center">

    <!-- Login form -->
    <form class="login-form">
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">
                    <i class="icon-reading icon-2x text-slate-300 border-slate-300 border-3 rounded-round p-3 mb-3 mt-1"></i>
                    <h5 class="mb-0">Faça login na sua conta</h5>
                    <span class="d-block text-muted">Informe suas credenciais</span>
                </div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input type="text" class="form-control" id="txtEmailLogin" placeholder="E-mail">
                    <div class="form-control-feedback">
                        <i class="icon-user text-muted"></i>
                    </div>
                </div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input type="password" class="form-control" id="txtSenhaLogin" placeholder="Senha" autocomplete="on">
                    <div class="form-control-feedback">
                        <i class="icon-lock2 text-muted"></i>
                    </div>
                </div>

                <div class="form-group">
                    @*<button type="submit" class="btn btn-primary btn-block">Sign in <i class="icon-circle-right2 ml-2"></i></button>*@
                    <input type="button" class="btn btn-primary btn-block" value="Entrar" id="btnLogin" >
                </div>

                <div class="text-center">
                    <a href="/Home/CadastrarUsuario">Cadastre-se aqui.</a>
                </div>
            </div>
        </div>
    </form>
    <!-- /login form -->

</div>
<!-- /content area -->